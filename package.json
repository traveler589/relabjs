{
  "name": "relabjs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "prepush": "lerna version --conventional-commits --no-push",
    "push": "lerna publish --no-git-tag-version --no-push",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -w -r 0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-typescript": "^1.0.1",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "yarn.lock": [
    "git rm --cached"
  ]
}
